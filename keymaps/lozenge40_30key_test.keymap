#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    behaviors {
        // Tap Dance Definitions
        td_shft_meta: tap_dance_shft_meta {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp LSHFT>, <&kp LMETA>, <&kp LS(LMETA)>;
        };

        td_ctrl_alt: tap_dance_ctrl_alt {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp LCTRL>, <&kp LALT>, <&kp LC(LALT)>;
        };

        // Mod-Morph Definitions
        mm_amp_pipe: mm_amp_pipe {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp AMPS>, <&kp PIPE>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };

        mm_qmark_excl: mm_qmark_excl {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp QMARK>, <&kp EXCL>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };

        mm_hash_doll: mm_hash_doll {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp HASH>, <&kp DLLR>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };

        mm_at_grave: mm_at_grave {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp AT>, <&kp GRAVE>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base_layer {
            display-name = "BASE";
// ------------------------------------------------------------------------------------------------------------
// |  B  |  Y  |  O  |  U  | None |                   | None |  D  |  N  |  G  |  V  |
// |  H  |  I  |  A  |  E  | None |  None  | |  None | None |  T  |  R  |  S  |  C  |
// |  K  |  P  |  J  |  W  | None |  None  | |  None | None |  M  |  L  |  F  |  X  |
//                    | NUM | SPACE|ShftMeta| |CtrlAlt| ENTER| SYM |
            bindings = <
&kp B      &kp Y      &kp O      &kp U      &none                               &none      &kp D      &kp N      &kp G      &kp V
&kp H      &kp I      &kp A      &kp E      &none      &none         &none      &none      &kp T      &kp R      &kp S      &kp C
&kp K      &kp P      &kp J      &kp W      &none      &none         &none      &none      &kp M      &kp L      &kp F      &kp X
                                 &mo 1      &kp SPACE  &td_shft_meta &td_ctrl_alt &kp RET  &mo 2
            >;
        };

        num_layer {
            display-name = "NUM";
// ------------------------------------------------------------------------------------------------------------
// |  [  |  ]  |  * |  +  | None |                    | None |  7  |  8  |  9  |  ,  |
// |  (  |  )  |  /  |  -  | None |  None  | |  None  | None |  4  |  5  |  6  |  .  |
// |  {  |  }  |  \  |  =  | None |  None  | |  None  | None |  1  |  2  |  3  |  0  |
//                    |trans| trans|  trans | |  trans | trans| FUN |
            bindings = <
&kp LBKT   &kp RBKT   &kp STAR   &kp PLUS   &none                               &none      &kp N7     &kp N8     &kp N9     &kp COMMA
&kp LPAR   &kp RPAR   &kp FSLH   &kp MINUS  &none      &none         &none      &none      &kp N4     &kp N5     &kp N6     &kp DOT
&kp LBRC   &kp RBRC   &kp BSLH   &kp EQUAL  &none      &none         &none      &none      &kp N1     &kp N2     &kp N3     &kp N0
                                 &trans     &trans     &trans        &trans     &trans     &mo 3
            >;
        };

        sym_layer {
            display-name = "SYM";
// ------------------------------------------------------------------------------------------------------------
// | ESC |  &/| | ^/√ | ;/: | None |                    | None |   <  |  UP  |  >   |  Q  |
// | TAB | BKSP | DEL | '/" | None |  None  | |  None  | None | LEFT | DOWN | RGHT |  Z  |
// | CAPS|  °/μ | —/– | _/~ | None |  None  | |  None  | None |  ?/! |  %/‰ |  #/$ | @/` |
//                    | FUN | trans|  trans | |  trans | trans| trans|
            bindings = <
&kp ESC    &mm_amp_pipe &kp CARET  &kp SEMI   &none                               &none      &kp LT     &kp UP     &kp GT     &kp Q
&kp TAB    &kp BSPC     &kp DEL    &kp SQT    &none      &none         &none      &none      &kp LEFT   &kp DOWN   &kp RIGHT  &kp Z
&caps_word   &none        &none      &kp UNDER  &none      &none         &none      &none      &mm_qmark_excl &kp PERCENT &mm_hash_doll &mm_at_grave
                                   &mo 3      &trans     &trans        &trans     &trans     &trans
            >;
        };

        fun_layer {
            display-name = "FUN";
// ------------------------------------------------------------------------------------------------------------
// | BT1 | BT2 | BT3 | BT4 | None |                    | None |  F7  |  F8  |  F9  |  F12  |
// | None| None| None| None| None |  None  | |  None  | None |  F4  |  F5  |  F6  |  F11  |
// | None| None| None| None| None |  None  | |  None  | None |  F1  |  F2  |  F3  |  F10  |
//                    |trans| BTCLR|  trans | |  trans |OutSel| trans|
            bindings = <
&bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &none                       &none      &kp F7     &kp F8     &kp F9     &kp F12
&none        &none        &none        &none        &none      &none     &none  &none      &kp F4     &kp F5     &kp F6     &kp F11
&none        &none        &none        &none        &none      &none     &none  &none      &kp F1     &kp F2     &kp F3     &kp F10
                                       &trans       &bt BT_CLR &trans    &trans &out OUT_TOG &trans
            >;
        };
    };
};