#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>

/ {

    keymap {
        compatible = "zmk,keymap";

        base_layer {
            display-name = "BASE";
// ------------------------------------------------------------------------------------------------------------
// |  B  |  Y  |  O  |  U  | None |                   | None |  D  |  N  |  G  |  V  |
// |  H  |  I  |  A  |  E  | None |  None  |  |  None | None |  T  |  R  |  S  |  C  |
// |  K  |  P  |  J  |  W  | None |  None  |  |  None | None |  M  |  L  |  F  |  X  |
//                   | NUM | SPACE|ShftMeta|  |CtrlAlt| ENTER| SYM |
            bindings = <
&cm LMETA  Q  &kp W  &kp E    &cm LMETA  R    &cm LALT T                        &cm RALT Y   &cm LMETA  U    &kp I     &kp O   &cm LMETA  P
&cm LCTRL  A  &kp S  &kp D    &cm LCTRL  F    &kp G     &kp KP_LPAR &kp KP_RPAR &kp H        &cm LCTRL  J    &kp K     &kp L   &cm LCTRL  SEMI
&cm LSHIFT Z  &kp X  &kp C    &cm LSHIFT V    &kp B     &kp LBKT    &kp RBKT    &kp N        &cm LSHIFT M    &kp COMMA &kp DOT &cm LSHIFT FSLH
                              &kp BSPC        &kp SPACE &mo 1       &mo 2       &kp RET      &kp DEL  
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        num_layer {
            display-name = "NUM";
// ------------------------------------------------------------------------------------------------------------
// |  [  |  ]  |  *   |  +  | None |                    | None |  7  |  8  |  9  |  ,  |
// |  (  |  )  |  /   |  -  | None |  None  |  |  None  | None |  4  |  5  |  6  |  .  |
// |  {  |  }  |  \   |  =  | None |  None  |  |  None  | None |  1  |  2  |  3  |  0  |
//                    |trans| trans|  trans |  |  trans | trans| FUN |
            bindings = <
&kp ESC     &kp PG_UP  &kp UP    &kp PG_DN  &kp C_PP                         &kp EQUAL  &kp N7  &kp N8  &kp N9  &kp FSLH
&kp TAB     &kp LEFT   &kp DOWN  &kp RIGHT  &kp C_NEXT  &kp SQT    &kp COMMA &kp MINUS  &kp N4  &kp N5  &kp N6  &kp STAR
&caps_word  &kp HOME   &kp INS   &kp END    &kp C_PREV  &kp GRAVE  &kp DOT   &kp N0     &kp N1  &kp N2  &kp N3  &kp BSLH
                                 &trans     &trans      &trans     &trans    &trans     &trans  
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        sym_layer {
            display-name = "SYM";
// ------------------------------------------------------------------------------------------------------------
// | ESC |  &/| | ^/√ | ;/: | None |                    | None |   <  |  UP  |  >   |  Q  |
// | TAB | BKSP | DEL | '/" | None |  None  |  |  None  | None | LEFT | DOWN | RGHT |  Z  |
// | CAPS|  °/μ | —/– | _/~ | None |  None  |  |  None  | None |  ?/! |  %/‰ |  #/$ | @/` |
//                   | FUN | trans|  trans |  |  trans | trans| trans|
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                      &kp F12   &kp F7   &kp F8    &kp F9   &none
&none         &none         &none         &none         &none         &none      &none    &kp F11   &kp F4   &kp F5    &kp F6   &none
&none         &none         &none         &none         &none         &none      &none    &kp F10   &kp F1   &kp F2    &kp F3   &none
                                          &bt BT_CLR    &trans        &trans     &trans   &trans    &trans  
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        fun_layer {
            display-name = "FUN";
// ------------------------------------------------------------------------------------------------------------
// | BT1 | BT2 | BT3 | BT4 | None |                    | None |  F7  |  F8  |  F9  |  F12  |
// | None| None| None| None| None |  None  |  |  None  | None |  F4  |  F5  |  F6  |  F11  |
// | None| None| None| None| None |  None  |  |  None  | None |  F1  |  F2  |  F3  |  F10  |
//                   |trans| BTCLR|  trans |  |  trans |OutSel| trans|
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                      &kp F12   &kp F7   &kp F8    &kp F9   &none
&none         &none         &none         &none         &none         &none      &none    &kp F11   &kp F4   &kp F5    &kp F6   &none
&none         &none         &none         &none         &none         &none      &none    &kp F10   &kp F1   &kp F2    &kp F3   &none
                                          &bt BT_CLR    &trans        &trans     &trans   &trans    &trans  
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};
